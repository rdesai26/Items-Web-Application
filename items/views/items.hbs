<h1>{{title}}</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
  {{# each items }}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{name}}</td>
      <td>{{price}}</td>
      <td>
          <a href="/items/edit/{{id}}" class="mb-1"> Edit</a>
          <a href="/items/delete/{{id}}" class="mb-1">Delete</a>
        </td>
    </tr>
  {{/each}}
  </tbody>
</table>