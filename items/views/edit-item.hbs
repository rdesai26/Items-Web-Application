<h1 class="mb-3">{{title}}</h1>
<form method="GET">
  <div class="form-group mb-3">
    {{# if exists}}
<div class="alert alert-danger mt-3 mb-3" role="alert">
  ID: {{id}} already exists
</div>
{{/if}}
    <label for="item-id" class="form-label">Item ID</label>
    <input type="number" class="form-control" name="id"placeholder="Enter ID" required="true" value="{{item.id}}"
    {{# if edit}}
    disabled="true"
    {{/if}}>
  </div>
    <div class="form-group mb-3">
    <label for="Item Price" class="form-label">Item Name</label>
    <input type="text" class="form-control" name="name" placeholder="Enter Name" required="true" value="{{item.name}}">
    </div>
    <div class="form-group mb-3">
    <label for="Item Price" class="form-label">Item Price</label>
  <input type="number" class="form-control" name="price" placeholder="Enter Price" required="true" step="0.01" value="{{item.price}}">
  </div>
  <button type="submit" class="btn btn-primary mb-3">
    {{# if edit}}
    Update 
    {{else}} 
    Create 
    {{/if}}</button>
</form>
